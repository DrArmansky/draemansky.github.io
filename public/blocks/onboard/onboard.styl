.onboard {
	  margin: auto;
	  width: auto;
	  height: auto;
	  max-width: 100%;
	  max-height: 100%;
	  background-color: $color__yellow;
	  position: absolute;
	  top: 0;
	  right: 0;
	  bottom: 0;
	  left: 0;
	  display: flex;
	  flex-direction: column;
	  justify-content: center;
	  align-items: center;
	  min-width: 360px;
}

.onboard__title {
	  text-align: center;
	  font-size: 33px;
}
