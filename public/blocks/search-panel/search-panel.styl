.search-panel {
	position: absolute;
	width: 100%;
	height: 100%;
	opacity: 0;
	transition: 0.6s;
	z-index: 2;
	top: 0;
	right: 0;
	display: flex;
	background-color: $color__grey;
	.wrapper {
		display: flex;
		align-items: center;
		justify-content: space-between;
		width: 100%;
		padding: 0 20px;
	}
    .search-button {
        fill: $color__dark-grey;
    }

	.cancel-button {
		width: 45px;
		height: 45px;
	}
}

@media (max-width:398px) {
	.search-panel {
		.cancel-button {
			width: 36px;
			height: 36px;
		}
	}
}
