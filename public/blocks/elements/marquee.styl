@keyframes scroll {
    0% {
        transform: translate(0, 0);
    }
    100% {
        transform: translate(-100%, 0)
    }
}

.marquee {
    display: block;
    width: 100%;
    white-space: nowrap;
    overflow: hidden;
    height: 25px;
    position: relative;
}

.marquee span {
    display: inline-block;
    padding-left: 50%;
    -webkit-animation: scroll 10s infinite linear;
    -moz-animation: scroll 10s infinite linear;
    animation: scroll 10s infinite linear;
}

.positionBar {
    height: 110%;
    width: 0;
    background-color: $color__black;
    position: absolute;
    margin-left: -40px;
    margin-top: -30px;
    transition: .3s width;
    transition-timing-function: linear;
    z-index: 2;
    opacity: 0.1;
    &--play {
        animation-name: play;
        animation-timing-function: linear;
    }
}

@keyframes play {
    0% {
        width 0
    }
    100% {
        width 100%
    }
}
