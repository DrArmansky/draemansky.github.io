.player {
	position: absolute;
	z-index: 100;
	width: 100%;
	height: 100%;
	overflow: hidden;
	right: 0;
	transition: margin-right 0.7s;
	background-color: $color__white;
	overflow: scroll;
	padding: 30px 20px 0px;
	display: flex;
	flex-direction: column;
	box-sizing: border-box;
	margin: 0;
}

.player__item {
	padding: 30px 22px 30px 40px;
	margin-bottom: 20px;
	min-height: 25px;
	position: relative;
	overflow: hidden;
	background-color: $color__yellow;
	transition: opacity .3s;
}

.player__item-like-bg {
	position: absolute;
	right: 0;
	top: 0;
	bottom: 0;
	width: 105px;
	background: linear-gradient(to left, rgba(251, 236, 0, 1) 50%, rgba(251, 236, 0, 0) 100%);
	display: flex;
}

.player__item-name {
	  font-size: 22px;
	  line-height: 24px;
	  text-align: left;
	  flex-grow: 1;
	  position: absolute;
	  transition: 10s;
	  white-space: nowrap;
}

@media (max-width:398px) {
	.player__item {
		padding: 25px 17px 25px 35px;
	}

	.player__item-name {
		font-size: 18px;
		line-height: 22px;
	}
}
